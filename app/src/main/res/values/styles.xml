<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

     <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="DashboardCardLables" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DashboardCards" parent="Base.CardView">
        <item name="cardCornerRadius">5sp</item>
        <item name="cardElevation">5sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:outlineSpotShadowColor">@android:color/darker_gray</item>
    </style>

    <style name="DashboardCardImages" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DashboardStatusText" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GroupsCards" parent="Base.CardView">

        <item name="android:layout_margin">5sp</item>
        <item name="cardCornerRadius">5sp</item>
        <item name="cardElevation">5sp</item>
        <item name="android:outlineSpotShadowColor">@android:color/darker_gray</item>

    </style>

    <style name="GroupsCardLables" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">25sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="GroupsCardImages" parent="Theme.AppCompat">
        <item name="android:layout_height">250sp</item>
        <item name="android:layout_width">250sp</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="AddFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorPrimary">@color/actionbar</item>
        <item name="android:colorPrimary">@color/actionbar</item>
        <item name="backgroundColor">#000</item>
    </style>
</resources>
