<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginRight="40sp"
        android:id="@+id/txtItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="@dimen/item_status_icon_size"
        android:layout_height="@dimen/item_status_icon_size"
        android:src="@drawable/in_stock_green"
        android:id="@+id/item_status_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#ccc"
        app:layout_constraintTop_toBottomOf="@id/txtItem"
        android:layout_marginTop="10sp"
        ></View>


</androidx.constraintlayout.widget.ConstraintLayout>