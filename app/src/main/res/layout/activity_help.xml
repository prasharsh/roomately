<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help.Help">

    <include
        layout="@layout/actionbar"
        android:id="@+id/actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        app:layout_constraintTop_toBottomOf="@id/actionbar"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtAddItem"
                android:text="Add Item"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtDeleteItem"
                android:text="Delete Item"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtDeleteCategory"
                android:text="Delete Category"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtAddGroup"
                android:text="Add Group"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtAddGroupMembers"
                android:text="Add Members To Group"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtAcceptInvitations"
                android:text="Accept Invitations"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtSelectActiveGroup"
                android:text="Select Active Group"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtRemoveItemFromLowStock"
                android:text="Remove Item From Low Stock"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtAddItemToLowStock"
                android:text="Add Item To Low Stock"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtEditName"
                android:text="Edit Name"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtChangePassword"
                android:text="Change Password"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="wrap_content"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtLogout"
                android:text="Logout From Application"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:elevation="4sp">
            <TextView
                android:id="@+id/txtDeleteAccount"
                android:text="Delete Account"
                style="@style/HelpCards"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>