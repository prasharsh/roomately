<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help.HelpButtonsFragment">

    <include
        layout="@layout/actionbar"
        android:id="@+id/actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/actionbar"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10sp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtAddItem"
                    android:text="Add Item"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtDeleteItem"
                    android:text="Delete Item"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtDeleteCategory"
                    android:text="Delete Category"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtAddGroup"
                    android:text="Add Group"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtAddGroupMembers"
                    android:text="Add Members To Group"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtAcceptInvitations"
                    android:text="Accept Invitations"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtSelectActiveGroup"
                    android:text="Select Active Group"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtRemoveItemFromLowStock"
                    android:text="Remove Item From Low Stock"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtAddItemToLowStock"
                    android:text="Add Item To Low Stock"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtEditName"
                    android:text="Edit Name"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:elevation="4sp">
                <TextView
                    android:id="@+id/txtChangePassword"
                    android:text="Change Password"
                    style="@style/HelpCards"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>