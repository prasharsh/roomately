<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:id="@+id/cards"
        android:padding="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cardBarcodeScanner"
                style="@style/DashboardCards">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="15sp"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DashboardCardImages"
                        android:background="@drawable/camera"
                        android:id="@+id/iconCamera"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Barcode Scanner"
                        style="@style/DashboardCardLables"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardItems"
                android:layout_weight="1"
                style="@style/DashboardCards">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="15sp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iconItems"
                        android:background="@drawable/items"
                        style="@style/DashboardCardImages"

                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Items"
                        style="@style/DashboardCardLables"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cardLowStock"
                style="@style/DashboardCards">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="15sp"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DashboardCardImages"
                        android:background="@drawable/low_stock"
                        android:id="@+id/iconLowStock"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Low Stock"
                        style="@style/DashboardCardLables"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cardTransaction"
                style="@style/DashboardCards">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="15sp"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DashboardCardImages"
                        android:background="@drawable/transaction"
                        android:id="@+id/iconTransaction"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        style="@style/DashboardCardLables"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>





    </LinearLayout>


