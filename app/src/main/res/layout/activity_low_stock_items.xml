<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LowStockItems">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar"/>

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        android:elevation="5sp"
        android:id="@+id/searchLowStockItem"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lowStockItemsList"
        app:layout_constraintTop_toBottomOf="@id/searchLowStockItem"
        android:layout_margin="5sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addLowStockItemFloatingButtoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/actionbar"
        android:clickable="true"
        app:srcCompat="@drawable/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>